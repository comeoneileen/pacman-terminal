#!/bin/sh

HOMEDIR = `whoami`
DIRECTORIES=(
    /home/`echo $HOMEDIR`/Pictures
    /home/`echo $HOMEDIR`/Desktop
    /home/`echo $HOMEDIR`/Templates
    /home/`echo $HOMEDIR`/python_games
    /home/`echo $HOMEDIR`/Documents
    /home/`echo $HOMEDIR`/Documents
    /home/`echo $HOMEDIR`/Music
    /home/`echo $HOMEDIR`/Videos)

for dir in $DIRECTORIES; do mkdir -p $dir; done
