#!/bin/sh

heimat=`whoami`
echo $heimat
echo /home/"$heimat"/

DIRECTORIES=(
    /home/"$heimat"/Pictures
    /home/"$heimat"/Desktop
    /home/"$heimat"/Templates
    /home/"$heimat"/python_games
    /home/"$heimat"/Documents
    /home/"$heimat"/Documents
    /home/"$heimat"/Music
    /home/"$heimat"/Videos)

for dir in $DIRECTORIES; do mkdir -p $dir; done
